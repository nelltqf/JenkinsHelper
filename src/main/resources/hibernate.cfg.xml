<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver.class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:file:db/jenkinshelper</property>
        <property name="connection.username">${connection.username}</property>
        <property name="connection.password">${connection.password}</property>

        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <mapping package="happy.rabbit"/>
        <mapping class="happy.rabbit.domain.JenkinsItem"/>
    </session-factory>
</hibernate-configuration>